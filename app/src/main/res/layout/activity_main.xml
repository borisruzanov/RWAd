<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <Button
        android:id="@+id/main_soc_female"
        android:layout_margin="16dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SOC FEMALE1"/>

    <Button
        android:id="@+id/main_soc_male"
        android:layout_below="@+id/main_soc_female"
        android:layout_margin="16dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SOC MALE"/>

    <Button
        android:id="@+id/main_video"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/main_soc_male"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:text="@string/videoapproval"/>

    <Button
        android:id="@+id/main_login"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/main_video"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:text="@string/login"/>
</RelativeLayout>